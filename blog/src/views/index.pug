doctype html
html 
    head 
        title Home Page
        link(rel="stylesheet", href="/styles/main.css")

    body
        div.container
            header 
                - const links = [{href: "/", label: "Home"}, {href: "/about", label: "About us"}, {href: "/contact", label: "Contact us"}]
                .menu
                    ul 
                        each link in links
                            li 
                                a(href=link.href)= link.label

                .menu 
                    ul 
                        li 
                            a(href="/login") Login
                        li 
                            a(href="/register") Register
            main 
                .page-title
                    h1= title
                .content 
                    p= message + 2 ** 10
            footer
                .copyright NodeJS Course
